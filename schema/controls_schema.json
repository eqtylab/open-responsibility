{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "controlId": {
        "type": "string",
        "pattern": "^[A-Z]+-[0-9]+$"
      },
      "title": {
        "type": "string"
      },
      "risks": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "component": {
              "type": "string"
            },
            "identifier": {
              "type": "string",
              "pattern": "^[0-9]+\\.[0-9]+$"
            },
            "riskId": {
              "type": "string"
            },
            "summary": {
              "type": "string"
            }
          },
          "required": ["component", "identifier", "riskId", "summary"]
        }
      },
      "description": {
        "type": "string"
      },
      "controlCategory": {
        "type": "string"
      },
      "readableControlId": {
        "type": "string"
      }
    },
    "required": ["controlId", "title", "risks", "description", "controlCategory", "readableControlId"]
  }
}
